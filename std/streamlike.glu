let map_srm f = filter_map (f >> Some)

let filter pred = filter_map <| \x -> if pred x then Some x else None

let cycle : [Streamlike a srm] -> srm -> Flatten srm (Unfold srm) =
    flatten << repeat

let cycle_n n = flatten << repeat_n n

